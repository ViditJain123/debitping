{
  "manifest_version": 3,
  "name": "Tally CORS Bridge",
  "description": "Bypass CORS restrictions for Tally XMLâ€‘HTTP API running on localhost.",
  "version": "2.0.0",
  "icons": { "128": "icons/icon.png" },
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:9000/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tally-api.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}